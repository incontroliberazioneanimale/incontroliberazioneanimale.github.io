{"structure":{"type":"Page","layout":{"width":980,"height":4063,"x":0,"y":0,"scale":1.0,"rotationInDegrees":0.0,"anchors":[]},"styleId":"p2","id":"c1hd","components":[{"type":"Component","layout":{"width":940,"height":3510,"x":25,"y":533,"scale":1.0,"rotationInDegrees":0.0,"anchors":[{"distance":0,"topToTop":495,"originalValue":4005,"type":"BOTTOM_PARENT","locked":false,"targetComponent":"c1hd"}]},"styleId":"txtNew","id":"WRchTxt9-2y","dataQuery":"#c1x6u","skin":"wysiwyg.viewer.skins.WRichTextNewSkin","componentType":"wysiwyg.viewer.components.WRichText"},{"type":"Component","layout":{"width":400,"height":340,"x":570,"y":120,"scale":1.0,"rotationInDegrees":0.0,"anchors":[{"distance":35,"topToTop":375,"originalValue":495,"type":"BOTTOM_TOP","locked":true,"targetComponent":"WRchTxt9-2y"}]},"styleId":"wp1","id":"WPht5-6ss","dataQuery":"#cdvs","skin":"wysiwyg.viewer.skins.photo.RoundPhoto","propertyQuery":"WPht5-6ss","componentType":"wysiwyg.viewer.components.WPhoto"},{"type":"Component","layout":{"width":540,"height":358,"x":20,"y":120,"scale":1.0,"rotationInDegrees":0.0,"anchors":[{"distance":17,"topToTop":375,"originalValue":495,"type":"BOTTOM_TOP","locked":true,"targetComponent":"WRchTxt9-2y"}]},"styleId":"txtNew","id":"WRchTxtd-xwg","dataQuery":"#cgje","skin":"wysiwyg.viewer.skins.WRichTextNewSkin","componentType":"wysiwyg.viewer.components.WRichText"},{"type":"Container","layout":{"width":980,"height":95,"x":-20,"y":15,"scale":1.0,"rotationInDegrees":0.0,"anchors":[{"distance":10,"topToTop":105,"originalValue":120,"type":"BOTTOM_TOP","locked":true,"targetComponent":"WRchTxtd-xwg"},{"distance":10,"topToTop":105,"originalValue":120,"type":"BOTTOM_TOP","locked":true,"targetComponent":"WPht5-6ss"}]},"styleId":"Cntnr2-1tl_hovxnlk7","id":"Cntnr2-1tl","components":[{"type":"Component","layout":{"width":350,"height":80,"x":330,"y":-5,"scale":1.0,"rotationInDegrees":0.0,"anchors":[{"distance":20,"topToTop":-5,"originalValue":95,"type":"BOTTOM_PARENT","locked":true,"targetC